# Files needed for usb driver

OBJS_USBDRV := \
   $(OBJDIR)/generic-usb.o \
   $(OBJDIR)/usb.o \
   $(OBJDIR)/hidutils.o \
   $(OBJDIR)/data.o \
   $(OBJDIR)/parse.o \
   $(OBJDIR)/descr.o

#
# DIRTY UGLY HACK ALERT! libusb.h should be generated by ./configure,
# but we're not running configure for mingw32 build yet so we fake it
# with echo.
#
ifeq ($(USBTYPE),generic)
   $(OBJDIR)/generic-usb.o: ../drivers/usb/generic/generic-usb.c
	   echo "#include \"$(DEPKGS)/include/usb.h\"" > ../drivers/usb/generic/libusb.h
	   $(CXX) -c $< -o $@
else
   OBJS_USBDRV += $(OBJDIR)/libusb-winusb-bridge.o

   $(OBJDIR)/generic-usb.o: ../drivers/usb/generic/generic-usb.c
	   echo "#include \"libusb-winusb-bridge.h\"" > ../drivers/usb/generic/libusb.h
	   $(CXX) -c $< -o $@

   $(OBJDIR)/libusb-winusb-bridge.o: libusb-winusb-bridge.c
	   $(CXX) -c $< -o $@
endif

