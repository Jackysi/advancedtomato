# Targets

objdir:
	mkdir -p ${OBJDIR}

all: objdir apcupsd.exe apcaccess.exe shutdown.exe popup.exe apctest.exe \
     smtp.exe email.exe background.exe apctray.exe multimon.cgi upsstats.cgi \
     upsfstats.cgi upsimage.cgi

clean:
	rm -rf $(OBJDIR) *.exe *.cgi
	rm -rf pthreadGCE.dll mingwm10.dll

pthreadGCE.dll: $(DEPKGS)/lib/pthreadGCE.dll
	cp -f $(DEPKGS)/lib/pthreadGCE.dll .

mingwm10.dll: $(MINGW)/mingw32/bin/mingwm10.dll
	cp -f $(MINGW)/mingw32/bin/mingwm10.dll .

# Link the apcupsd daemon executable ...
apcupsd.exe: $(APC_OBJS) pthreadGCE.dll mingwm10.dll
	$(CXX) $(APC_OBJS) $(APC_LIBS) -mwindows -o $@

apcaccess.exe: $(ACCESS_OBJS) pthreadGCE.dll mingwm10.dll
	$(CXX) $(ACCESS_OBJS) $(ACCESS_LIBS) -o $@

apctest.exe: $(TEST_OBJS) pthreadGCE.dll mingwm10.dll
	$(CXX) $(TEST_OBJS) $(TEST_LIBS) -o $@

shutdown.exe: $(SHUT_OBJS) mingwm10.dll
	$(CXX) $(SHUT_OBJS) $(SHUT_LIBS) -mwindows -o $@

popup.exe: $(POP_OBJS) mingwm10.dll
	$(CXX) $(POP_OBJS) $(POP_LIBS) -mwindows -o $@

email.exe: $(EMAIL_OBJS) mingwm10.dll
	$(CXX) $(EMAIL_OBJS) $(EMAIL_LIBS) -o $@

background.exe: $(BKG_OBJS) mingwm10.dll
	$(CXX) $(BKG_OBJS) $(BKG_LIBS) -mwindows -o $@

smtp.exe: $(SMTP_OBJS) mingwm10.dll
	$(CXX) $(SMTP_OBJS) $(SMTP_LIBS) -o $@

apctray.exe: $(APT_OBJS) mingwm10.dll
	$(CXX) $(APT_OBJS) $(APT_LIBS) -mwindows -o $@

gapcmon.exe: $(GAPCMON_OBJS)
	$(CC) $(GAPCMON_OBJS) $(GAPCMON_LIBS) -mwindows -o $@

multimon.cgi: $(MULTIMON_OBJS) mingwm10.dll
	$(CXX) $(MULTIMON_OBJS) $(MULTIMON_LIBS) -o $@

upsstats.cgi: $(UPSSTATS_OBJS) mingwm10.dll
	$(CXX) $(UPSSTATS_OBJS) $(UPSSTATS_LIBS) -o $@

upsfstats.cgi: $(UPSFSTATS_OBJS) mingwm10.dll
	$(CXX) $(UPSFSTATS_OBJS) $(UPSFSTATS_LIBS) -o $@

upsimage.cgi: $(UPSIMAGE_OBJS) mingwm10.dll
	$(CXX) $(UPSIMAGE_OBJS) $(UPSIMAGE_LIBS) -o $@

winapcupsd.exe: all installer/*.nsi installer/*.nsh installer/*.ini $(TEXTFILES)
	$(STRIP) *.exe *.dll *.cgi
	$(UNIX2DOS) -k -n $(foreach f,$(TEXTFILES),$(f) installer/$(subst .txt,,$(notdir $(f))).txt)
	$(MAKENSIS) -V2 -DDEPKGS="$(DEPKGS)" -DVERSION="$(VERSION)" -DTOPDIR="${TOPDIR}" -DUSBTYPE="${USBTYPE}" installer/winapcupsd.nsi
