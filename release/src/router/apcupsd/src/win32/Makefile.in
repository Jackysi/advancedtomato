#
# Makefile for win32 apcupsd executables
# Using MinGW cross-compiler on GNU/Linux
#  
#  Modified from Bacula Makefile.in for apcupsd
#   Kern Sibbald, April 2006
#  Further modifications by Adam Kropelin
# 

# Configuration
VERSION = @VERSION@

PARENT_DIR = @TOP_DIR@
TOPDIR = @topdir@
CROSSTOOLS = $(PARENT_DIR)/cross-tools
MINGW = $(CROSSTOOLS)/mingw32
INCLUDE_MINGW = -I $(MINGW)/mingw32/include
INCLUDE_GCC = -I $(MINGW)/lib/gcc/mingw32/3.4.5/include

# By default we will use the winusb driver
# The other option is generic
USBTYPE ?= winusb

DEPKGS = $(PARENT_DIR)/depkgs-win32/libroot

INCLUDE_APC = -I ../../include -I ./compat
INCLUDE_PTHREADS = -I $(DEPKGS)/include/pthread
INCLUDE_LIBUSB = -I $(DEPKGS)/include
INCLUDE_NETSNMP = -I $(DEPKGS)/include/net-snmp
INCLUDE_LIBUSBHID = -I ../libusbhid
INCLUDE_ICONS = -I .

LIB_MINGW = $(MINGW)/mingw32/lib
LIB_PTHREADS = $(DEPKGS)/lib/pthreadGCE.dll
LIB_NETSNMP = $(DEPKGS)/lib/libnetsnmp.a

ifeq ($(USBTYPE),generic)
  LIB_LIBUSB = $(DEPKGS)/lib/libusb.a
else
  LIB_LIBUSB = -lsetupapi
endif

BIN_DIR = $(MINGW)/bin

INCLUDES = \
	$(INCLUDE_GCC) \
	$(INCLUDE_MINGW) \
	$(INCLUDE_PTHREADS) \
	$(INCLUDE_LIBUSB) \
	$(INCLUDE_APC) \
	$(INCLUDE_ICONS) \
	$(INCLUDE_LIBUSBHID) \
	$(INCLUDE_NETSNMP)

HAVES = \
	-DHAVE_MINGW \
	-DHAVE_WIN32 \
	-DHAVE_NET_DRIVER \
	-DHAVE_TEST_DRIVER \
	-DHAVE_APCSMART_DRIVER \
	-DHAVE_DUMB_DRIVER \
	-DHAVE_USB_DRIVER \
	-DHAVE_SNMP_DRIVER \
	-DHAVE_NET_SNMP \
	-DHAVE_PCNET_DRIVER \
	-DHAVE_SNMPLITE_DRIVER

DEFINES = \
	-DWIN32 \
	$(HAVES) \
	-D__APCUPSD__ \
	-D_WIN32_IE=0x0500

CC = $(BIN_DIR)/mingw32-gcc -O2 $(DEFINES) $(INCLUDES)
CXX = $(BIN_DIR)/mingw32-g++ -O2 $(DEFINES) $(INCLUDES)
WINDRES = $(BIN_DIR)/mingw32-windres
MAKENSIS = $(BIN_DIR)/makensis
STRIP = $(BIN_DIR)/mingw32-strip
UNIX2DOS = unix2dos

TEXTFILES := $(TOPDIR)/COPYING \
             $(TOPDIR)/ChangeLog \
             $(TOPDIR)/ReleaseNotes \
             $(wildcard $(TOPDIR)/doc/*.txt)

first: all

